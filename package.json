{
  "name": "postcss-blend-colors",
  "version": "1.0.3",
  "description": "A postcss plugin to blend 2 colors by a given factor",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DesignByCode/postcss-blend-colors.git"
  },
  "bugs": {
    "url": "https://github.com/DesignByCode/postcss-blend-colors/issues"
  },
  "homepage": "https://github.com/DesignByCode/postcss-blend-colors#readme",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "types": "dist/",
  "main": "./dist/index.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsc --declaration && vite build",
    "clean": "rd /s /q dist .cache>nul 2>&1|echo.>nul",
    "dev": "pnpm build --watch",
    "prepublishOnly": "pnpm build",
    "release": "release-it",
    "test": "vitest --coverage"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "authors": [
    {
      "name": "Claude Myburgh",
      "email": "claude@designbycode.co.za",
      "url": "https://designbycode.co.za"
    }
  ],
  "browserslist": [
    "> .5% or last 2 versions"
  ],
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/DesignByCode/postcss-blend-colors/blob/main/LICENCE"
    }
  ],
  "peerDependencies": {
    "chroma-js": "^2.4.2",
    "postcss": "^8.4.27"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "postcss": "^8.4.39"
  },
  "devDependencies": {
    "@release-it/bumper": "^5.1.0",
    "@release-it/conventional-changelog": "^7.0.2",
    "@release-it/keep-a-changelog": "^4.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@types/chroma-js": "^2.4.4",
    "@types/node": "^20.14.10",
    "@vitest/coverage-istanbul": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "release-it": "^16.3.0",
    "semantic-release": "^21.1.2",
    "terser": "^5.31.1",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^0.34.6"
  },
  "keywords": [
    "postcss",
    "plugin",
    "postcss-plugin",
    "color-mix",
    "color-blending",
    "blend-color",
    "color-mixer"
  ]
}
